<T3DataStructure>
<sheets>	
	<MAIN>
		<ROOT>
			<TCEforms>
				<sheetTitle>LLL:EXT:ke_yac/locallang_db.php:ff_main</sheetTitle>
			</TCEforms>
			<type>array</type>
			<el>
				<mode>
					<TCEforms>
						<label>LLL:EXT:ke_yac/locallang_db.php:ff_mode_selector</label>
						<config>
							<type>select</type>
							<items>
								<numIndex index="0">
									<numIndex index="0">LLL:EXT:ke_yac/locallang_db.xml:ff_mode.I.0</numIndex>
									<numIndex index="1">0</numIndex>
								</numIndex>
								<numIndex index="1">
									<numIndex index="0">LLL:EXT:ke_yac/locallang_db.xml:ff_mode.I.1</numIndex>
									<numIndex index="1">1</numIndex>
								</numIndex>
								<numIndex index="2">
									<numIndex index="0">LLL:EXT:ke_yac/locallang_db.xml:ff_mode.I.2</numIndex>
									<numIndex index="1">2</numIndex>
								</numIndex>
								<numIndex index="3">
									<numIndex index="0">LLL:EXT:ke_yac/locallang_db.xml:ff_mode.I.3</numIndex>
									<numIndex index="1">3</numIndex>
								</numIndex>
								<numIndex index="4">
									<numIndex index="0">LLL:EXT:ke_yac/locallang_db.xml:ff_mode.I.4</numIndex>
									<numIndex index="1">4</numIndex>
								</numIndex>
							</items>
							<size>1</size>
						</config>
					</TCEforms>
				</mode>
				
				<!-- HTML template -->
				<templateFile>
					<TCEforms type="array">
						<label>LLL:EXT:ke_yac/locallang_db.php:ff_templateFile</label>
						<config type="array">
							<type>input</type>
						</config>
					</TCEforms>
				</templateFile>

				<!-- CSS path -->
				<cssPath>
					<TCEforms type="array">
						<label>LLL:EXT:ke_yac/locallang_db.php:ff_cssPath</label>
						<config type="array">
							<type>input</type>
						</config>
					</TCEforms>
				</cssPath>

				<singleviewPid>
					<TCEforms>
						<exclude>1</exclude>
						<label>LLL:EXT:ke_yac/locallang_db.xml:ff_singleviewPid</label>
						<config>
							<type>group</type>
							<internal_type>db</internal_type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
						</config>
					</TCEforms>
				</singleviewPid>
				
				<!-- show only events with the following category -->
				<singleCat>
					<TCEforms>
						<exclude>1</exclude>
						<label>LLL:EXT:ke_yac/locallang_db.xml:ff_singleCat</label>
						<config>
							<type>group</type>
							<internal_type>db</internal_type>
							<allowed>tx_keyac_cat</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
						</config>
					</TCEforms>
				</singleCat>
				
				
				
			</el>
		</ROOT>
	</MAIN>
	
	<CALENDAR>
		<ROOT>
			<TCEforms>
				<sheetTitle>LLL:EXT:ke_yac/locallang_db.php:ff_calendar</sheetTitle>
			</TCEforms>
			<type>array</type>
			<el>
				
				<columns>
					<TCEforms>
						<label>LLL:EXT:ke_yac/locallang_db.php:ff_columns</label>
						<config>
							<type>input</type>
							<size>3</size>
							<eval>int</eval>
							<range type="array">
								<upper>12</upper>
								<lower>0</lower>
							</range>
						</config>
					</TCEforms>
				</columns>
				
				<rows>
					<TCEforms>
						<label>LLL:EXT:ke_yac/locallang_db.php:ff_rows</label>
						<config>
							<type>input</type>
							<size>3</size>
							<eval>int</eval>
							<range type="array">
								<upper>12</upper>
								<lower>0</lower>
							</range>
						</config>
					</TCEforms>
				</rows>		
				
				<!-- LinkToSingleView -->
				<linkToSingleView>
					<TCEforms>
						<label>LLL:EXT:ke_yac/locallang_db.php:ff_linkToSingleView</label>
						<config>
							<type>select</type>
							<items>
								<numIndex index="0">
									<numIndex index="0">LLL:EXT:ke_yac/locallang_db.xml:ff_yes</numIndex>
									<numIndex index="1">1</numIndex>
								</numIndex>
								<numIndex index="1">
									<numIndex index="0">LLL:EXT:ke_yac/locallang_db.xml:ff_no</numIndex>
									<numIndex index="1">0</numIndex>
								</numIndex>
							</items>
						</config>
					</TCEforms>
				</linkToSingleView>
				
			</el>
		</ROOT>
	</CALENDAR>

	<FRONTENDEDIT>
		<ROOT>
			<TCEforms>
				<sheetTitle>LLL:EXT:ke_yac/locallang_db.php:ff_feedit</sheetTitle>
			</TCEforms>
			<type>array</type>
			<el>
				<!-- enable frontend editing of events -->
				<enableFrontendEditing>
					<TCEforms>
						<label>LLL:EXT:ke_yac/locallang_db.php:ff_enableFrontendEditing</label>
						<onChange>reload</onChange>
						<config>
							<type>select</type>
							<items>
								<numIndex index="0">
									<numIndex index="0">LLL:EXT:ke_yac/locallang_db.xml:ff_yes</numIndex>
									<numIndex index="1">1</numIndex>
								</numIndex>
								<numIndex index="1">
									<numIndex index="0">LLL:EXT:ke_yac/locallang_db.xml:ff_no</numIndex>
									<numIndex index="1">0</numIndex>
								</numIndex>
							</items>
						</config>
					</TCEforms>
				</enableFrontendEditing>
				
				<!-- Select Usergroup for frontend editing-->
				<userGroups>
					<TCEforms>
						<exclude>1</exclude>
						<label>LLL:EXT:ke_yac/locallang_db.xml:ff_usergroup</label>
						<displayCond>FIELD:enableFrontendEditing:=:1</displayCond>
						<config>
							<type>group</type>
							<internal_type>db</internal_type>
							<allowed>fe_groups</allowed>
							<size>3</size>
							<maxitems>99</maxitems>
							<minitems>0</minitems>
						</config>
					</TCEforms>
				</userGroups>
			</el>
		</ROOT>	
	</FRONTENDEDIT>
	
	<TEASER>
		<ROOT>
			<TCEforms>
				<sheetTitle>LLL:EXT:ke_yac/locallang_db.php:ff_teaser</sheetTitle>
			</TCEforms>
			<type>array</type>
			<el>
				<!-- single pid for linking from teaser view to list view -->
				<singlePid>
					<TCEforms>
						<exclude>1</exclude>
						<label>LLL:EXT:ke_yac/locallang_db.xml:ff_singlePid</label>
						<config>
							<type>group</type>
							<internal_type>db</internal_type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
						</config>
					</TCEforms>
				</singlePid>
				<!-- headertext of teaser view -->
				<teaserHeader>
					<TCEforms>
						<label>LLL:EXT:ke_yac/locallang_db.xml:ff_teaserHeader</label>
						<config>
							<type>input</type>
							<size>30</size>
						</config>
					</TCEforms>
				</teaserHeader>
				<!-- how many items are shown in teaser-view -->
				<teaserLimit>
					<TCEforms>
						<label>LLL:EXT:ke_yac/locallang_db.xml:ff_teaserLimit</label>
						<config>
							<type>input</type>
							<size>10</size>
						</config>
					</TCEforms>
				</teaserLimit>
				<!-- lenght of item title (crop title at this length) -->
				<teaserLength>
					<TCEforms>
						<label>LLL:EXT:ke_yac/locallang_db.xml:ff_teaserLength</label>
						<config>
							<type>input</type>
							<size>10</size>
						</config>
					</TCEforms>
				</teaserLength>
				
			</el>
		</ROOT>
	</TEASER>
	
	<MYEVENTS>
		<ROOT>
			<TCEforms>
				<sheetTitle>LLL:EXT:ke_yac/locallang_db.php:ff_myEvents</sheetTitle>
			</TCEforms>
			<type>array</type>
			<el>
				<myEventsSinglePid>
					<TCEforms>
						<exclude>1</exclude>
						<label>LLL:EXT:ke_yac/locallang_db.xml:ff_singlePid</label>
						<config>
							<type>group</type>
							<internal_type>db</internal_type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
						</config>
					</TCEforms>
				</myEventsSinglePid>
				
			</el>
		</ROOT>
	</MYEVENTS>
	
	<DETAILVIEW>
		<ROOT>
			<TCEforms>
				<sheetTitle>LLL:EXT:ke_yac/locallang_db.php:ff_detailView</sheetTitle>
			</TCEforms>
			<type>array</type>
			<el>
				<singleDateUid>
					<TCEforms>
						<exclude>1</exclude>
						<label>LLL:EXT:ke_yac/locallang_db.xml:ff_singleDateUid</label>
						<config>
							<type>group</type>
							<internal_type>db</internal_type>
							<allowed>tx_keyac_dates</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
						</config>
					</TCEforms>
				</singleDateUid>
				
			</el>
		</ROOT>
	</DETAILVIEW>
	
</sheets>
</T3DataStructure>